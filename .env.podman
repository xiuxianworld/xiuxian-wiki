# Podman 部署环境配置
NODE_ENV=production

# 数据库配置
DATABASE_URL="file:/app/data/production.db"

# 认证配置 (请更换为安全的密钥)
JWT_SECRET="CHANGE_THIS_TO_A_SECURE_SECRET_KEY_IN_PRODUCTION_AT_LEAST_32_CHARACTERS_LONG"

# Next.js 配置
NEXTAUTH_URL="https://your-domain.com"

# 服务器配置
PORT=3000
HOSTNAME="0.0.0.0"

# 默认管理员账号配置 (生产环境请修改)
DEFAULT_ADMIN_USERNAME="admin"
DEFAULT_ADMIN_PASSWORD="SecureAdmin2024!"
DEFAULT_ADMIN_ROLE="admin"

# Nginx 配置 (可选)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Podman 特定配置
# 当前用户的 UID 和 GID (用于 rootless 模式)
PODMAN_UID=1000
PODMAN_GID=1000

# Podman 网络配置
PODMAN_NETWORK_SUBNET=172.20.0.0/16
PODMAN_NETWORK_GATEWAY=172.20.0.1

# SELinux 配置 (如果启用 SELinux)
# 设置为 true 如果需$ SELinux 上下文标签
SELINUX_ENABLED=false

# Podman 存储配置
# 默认存储驱动 (overlay, vfs, 等)
PODMAN_STORAGE_DRIVER=overlay

# 日志配置
PODMAN_LOG_DRIVER=journald
PODMAN_LOG_LEVEL=info